#!/usr/bin/env sh

# Format staged files with Prettier
pnpm exec lint-staged

# Lint only packages with uncommitted changes (via Turbo filter)
pnpm lint --filter="...[HEAD]" --output-logs=errors-only

# Typecheck only packages with uncommitted changes (via Turbo filter)
pnpm typecheck --filter="...[HEAD]" --output-logs=errors-only
