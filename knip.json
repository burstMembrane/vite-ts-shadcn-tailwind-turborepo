{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignore": ["turbo/generators/**", "packages/ui/src/styles/globals.css", "scripts/*"],
  "workspaces": {
    "apps/web": {
      "ignoreDependencies": ["@tailwindcss/vite", "lucide-react", "tailwindcss"]
    },
    "packages/ui": {
      "entry": ["src/components/**/*.tsx", "src/lib/**/*.ts", "src/hooks/**/*.ts"],
      "paths": {
        "dist/**/*.js": ["src/**/*.{ts,tsx}"]
      },
      "ignoreDependencies": [
        "lucide-react",
        "@radix-ui/react-slot",
        "class-variance-authority",
        "clsx",
        "tailwind-merge",
        "tw-animate-css",
        "@radix-ui/react-dropdown-menu",
        "@repo/eslint-config",
        "@repo/typescript-config",
        "@tailwindcss/postcss",
        "@types/react",
        "@types/react-dom",
        "glob",
        "postcss-cli",
        "postcss-load-config",
        "tailwindcss"
      ]
    },
    "packages/eslint-config": {
      "ignoreDependencies": [
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "eslint-config-turbo",
        "eslint-plugin-only-warn"
      ]
    },
    ".": {
      "ignoreDependencies": ["@turbo/gen", "eslint-config-prettier"]
    }
  }
}
