{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    "./styles": "./dist/styles.css",
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "default": "./dist/lib/*.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "default": "./dist/components/*.js"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "default": "./dist/hooks/*.js"
    }
  },
  "scripts": {
    "dev": "pnpm run build:css --watch",
    "build": "vite build && tsc --emitDeclarationOnly --outDir dist && pnpm run build:css",
    "build:css": "postcss ./src/styles/globals.css -o ./dist/styles.css --verbose",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0"
  },
  "peerDependencies": {
    "react": "^19.2.0"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.3.6"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^20.19.9",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "eslint": "^9.18.0",
    "glob": "^13.0.0",
    "postcss-cli": "^11.0.1",
    "postcss-load-config": "^6.0.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.7.2",
    "vite": "^7.2.7"
  }
}
