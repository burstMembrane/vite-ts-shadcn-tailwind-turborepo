{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./styles": "./dist/styles.css",
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "default": "./dist/lib/*.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "default": "./dist/components/*.js"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "default": "./dist/hooks/*.js"
    }
  },
  "scripts": {
    "dev": "pnpm run build:css --watch",
    "build": "pnpm run generate:barrels && tsdown && pnpm run build:css",
    "build:css": "postcss ./src/styles/globals.css -o ./dist/styles.css --verbose",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "generate:barrels": "barrelsby --config .barrelsby.json",
    "postshadcn": "tsx ./scripts/postshadcn.ts",
    "shadcn:add": "sh -c 'pnpm dlx shadcn@latest add \"$@\" && pnpm tsx scripts/fix-shadcn-imports.ts' --"
  },
  "peerDependencies": {
    "react": "^19.2.0"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.3.6"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^20.19.9",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "eslint": "^9.18.0",
    "jscodeshift": "^17.3.0",
    "postcss-cli": "^11.0.1",
    "postcss-load-config": "^6.0.1",
    "tailwindcss": "^4.1.11",
    "ts-morph": "^27.0.2",
    "tsdown": "0.17.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  }
}
